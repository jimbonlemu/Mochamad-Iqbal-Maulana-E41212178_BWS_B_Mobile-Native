<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">


  <LinearLayout
      android:layout_marginTop="100dp"
      android:layout_marginBottom="100dp"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="150dp">

          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_dialog_map"
              android:paddingTop="20dp"
              android:text="Map"
              android:textColor="#fff" />
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_input_add"
              android:paddingTop="20dp"
              android:text="Add"
              android:textColor="#fff" />
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_delete"
              android:paddingTop="20dp"
              android:text="Remove"
              android:textColor="#fff" />
      </LinearLayout>

      <LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="100dp">
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_dialog_info"
              android:paddingTop="20dp"
              android:text="About"
              android:textColor="#fff" />
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_dialog_alert"
              android:paddingTop="20dp"
              android:text="Warning!"
              android:textColor="#fff" />
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_dialog_dialer"
              android:paddingTop="20dp"
              android:text="Tiles"
              android:textColor="#fff" />
      </LinearLayout>

      <LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="100dp">
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_menu_always_landscape_portrait"
              android:paddingTop="20dp"
              android:text="Flip"
              android:textColor="#fff" />
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_menu_call"
              android:paddingTop="20dp"
              android:text="Contact"
              android:textColor="#fff" />
          <Button
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:background="@drawable/bulet"
              android:drawableTop="@android:drawable/ic_menu_manage"
              android:paddingTop="20dp"
              android:text="Settings"
              android:textColor="#fff" />
      </LinearLayout>

  </LinearLayout>

</ScrollView>